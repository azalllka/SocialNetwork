@model IEnumerable<SocialNetwork.Domain.Entities.Friendship>
@{
    ViewData["Title"] = "Входящие заявки в друзья";
}
<h2>Входящие заявки в друзья</h2>
@if (!Model.Any())
{
    <p>Нет входящих заявок.</p>
}
else
{
    <ul>
        @foreach (var req in Model)
        {
            <li style="margin-bottom: 1em;">
                <span>@(req.User?.UserName ?? req.UserId)</span>
                <form asp-action="AcceptFriend" method="post" style="display:inline;">
                    <input type="hidden" name="userId" value="@req.UserId" />
                    <button type="submit" class="button bg-primary text-white">Принять</button>
                </form>
            </li>
        }
    </ul>
} 